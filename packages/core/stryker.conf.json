{
    "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
    "_comment": "Mutation testing configuration for TypeScript/Vitest",
    "mutator": {
        "plugins": [
            "typescript"
        ]
    },
    "packageManager": "pnpm",
    "reporters": [
        "html",
        "clear-text",
        "progress"
    ],
    "testRunner": "vitest",
    "testRunner_comment": "Stryker will automatically find vitest.config.ts",
    "coverageAnalysis": "perTest",
    "tsconfigFile": "tsconfig.json",
    "mutate": [
        "src/**/*.ts",
        "!src/**/*.d.ts",
        "!src/**/types.ts",
        "!src/**/index.ts",
        "!src/schemas/**"
    ],
    "ignoreStatic": true
}