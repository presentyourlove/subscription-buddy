{
    "name": "@subscription-buddy/functions",
    "scripts": {
        "build": "pnpm run build:tsoa && tsc",
        "build:watch": "tsc --watch",
        "build:tsoa": "tsoa spec-and-routes",
        "serve": "npm run build && firebase emulators:start --only functions",
        "shell": "npm run build && firebase functions:shell",
        "start": "npm run shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log",
        "test": "vitest",
        "generate:sbom": "cyclonedx-npm --output-format JSON --output-file sbom.json"
    },
    "engines": {
        "node": "18"
    },
    "main": "lib/index.js",
    "dependencies": {
        "@google-cloud/pubsub": "^4.3.3",
        "@google-cloud/vision": "^4.0.0",
        "@sentry/node": "^10.37.0",
        "@sentry/profiling-node": "^10.37.0",
        "@tsoa/runtime": "^6.0.0",
        "cors": "^2.8.5",
        "express": "^5.2.1",
        "firebase-admin": "^12.0.0",
        "firebase-functions": "^4.6.0",
        "helmet": "^8.0.0",
        "swagger-ui-express": "^5.0.0",
        "tsoa": "^6.0.0",
        "zod": "^3.24.1",
        "fs-extra": "^11.2.0",
        "sharp": "^0.33.2",
        "@simplewebauthn/server": "^9.0.3"
    },
    "devDependencies": {
        "@cyclonedx/cyclonedx-npm": "^4.1.2",
        "@pact-foundation/pact": "^13.0.0",
        "@types/cors": "^2.8.18",
        "@types/express": "^5.0.0",
        "@types/swagger-ui-express": "^4.1.6",
        "typescript": "^5.0.0",
        "vitest": "^1.6.0",
        "@types/fs-extra": "^11.0.4",
        "@types/sharp": "^0.32.0"
    },
    "private": true
}