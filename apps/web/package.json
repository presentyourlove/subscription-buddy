{
  "name": "@subscription-buddy/web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:emulator": "cross-env VITE_USE_EMULATOR=true vite",
    "emulators": "firebase emulators:start",
    "emulators:import": "firebase emulators:start --import=./emulator-data --export-on-exit",
    "build": "vite build",
    "preview": "vite preview",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx --fix --ignore-path .gitignore",
    "format": "prettier --write .",
    "scan:image": "docker build -t subscription-buddy:latest . && trivy image subscription-buddy:latest",
    "test": "vitest",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lhci:collect": "lhci collect",
    "lhci:assert": "lhci assert",
    "lhci:full": "npm run build && lhci collect && lhci assert",
    "test:a11y": "pa11y-ci",
    "generate:sbom": "cyclonedx-npm --output-format JSON --output-file sbom.json"
  },
  "dependencies": {
    "@unhead/vue": "^2.1.2",
    "@vueuse/core": "^14.1.0",
    "caniuse-lite": "^1.0.30001764",
    "firebase": "^12.6.0",
    "fuse.js": "^7.1.0",
    "pinia": "^3.0.4",
    "pinia-plugin-persistedstate": "^4.7.1",
    "uuid": "^13.0.0",
    "vue": "^3.5.24",
    "vue-i18n": "^11.2.2",
    "vue-router": "^4.6.3",
    "vue-toastification": "^2.0.0-rc.5",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^5.0.0",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@cyclonedx/cyclonedx-npm": "^4.1.2",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.57.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-onboarding": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/vue3-vite": "^10.1.11",
    "@types/node": "^25.0.7",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.23",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "^10.1.11",
    "eslint-plugin-vue": "^9.22.0",
    "firebase-tools": "^14.27.0",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "pa11y-ci": "^4.0.1",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "prettier": "^3.2.5",
    "rollup-plugin-visualizer": "^6.0.5",
    "semantic-release": "^25.0.2",
    "storybook": "^10.1.11",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.3",
    "unplugin-vue-components": "^31.0.0",
    "vite": "^7.2.4",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.16",
    "vue-tsc": "^3.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}