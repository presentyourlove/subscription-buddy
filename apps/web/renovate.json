{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        ":preserveSemverRanges"
    ],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ],
            "automerge": true
        },
        {
            "matchPackageNames": [
                "node",
                "npm"
            ],
            "enabled": false
        }
    ],
    "rangeStrategy": "bump",
    "timezone": "Asia/Taipei",
    "schedule": [
        "before 5am on monday"
    ]
}